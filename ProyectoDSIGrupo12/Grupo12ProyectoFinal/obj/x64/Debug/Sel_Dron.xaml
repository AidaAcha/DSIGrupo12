<Page x:ConnectionId='1'
    x:Class="Grupo12ProyectoFinal.Sel_Dron"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grupo12ProyectoFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="ImageGridView_DefaultItemTemplate"
                                                  >
            <Grid x:ConnectionId='7' Height="100" Width="100" Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='8'                        FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                <Image x:ConnectionId='9'                          Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"/>
                <!--<TextBlock Text="{x:Bind Nombre}" FontSize="{Binding Value, ElementName=FontSlider}" Grid.Column="2" VerticalAlignment="Center"/>-->

            </Grid>

        </DataTemplate>

        <DataTemplate x:Key="ImageGridView_DefaultItemTemplate2"
                                               >
            <Grid x:ConnectionId='3' Height="100" Width="100" Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>
                <TextBlock x:ConnectionId='4'                        FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                <Image x:ConnectionId='5'                          Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"/>
                <!--<TextBlock Text="{x:Bind Nombre}" FontSize="{Binding Value, ElementName=FontSlider}" Grid.Column="2" VerticalAlignment="Center"/>-->

            </Grid>

        </DataTemplate>

    </Page.Resources>

    <Grid>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <ListView x:ConnectionId='10' x:Name="itemsPaquete" 
                  
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollMode="Enabled"                  
                  ScrollViewer.VerticalScrollMode="Disabled"
                  
                  Background="LightGray"
                                                       
                  ItemTemplate="{StaticResource ImageGridView_DefaultItemTemplate}" 
                  IsItemClickEnabled="True"  
                                                            >
            <ListView.ItemsPanel>

                <ItemsPanelTemplate>
                    <StackPanel Background="Transparent" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <ListView x:ConnectionId='11' x:Name="itemsDrones" 
                  Grid.Column="1"
                  ScrollViewer.VerticalScrollBarVisibility="Disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollMode="Enabled"                  
                  ScrollViewer.VerticalScrollMode="Disabled"
                  
                  Background="LightGray"
                                                     
                  ItemTemplate="{StaticResource ImageGridView_DefaultItemTemplate2}" 
                  IsItemClickEnabled="True"  
                                                         >
            <ListView.ItemsPanel>

                <ItemsPanelTemplate>
                    <StackPanel Background="Transparent" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:ConnectionId='19' x:Name="TextInfoPaquete"  Width="399" Height="50" VerticalAlignment="Top" Grid.Row="1" Foreground="Black" FontSize="30" Text="Información del paquete" TextWrapping="Wrap" HorizontalAlignment="Left"  />
            <Image x:ConnectionId='20' x:Name="SelImaPaquete" Source="Assets\\Samples\\CuadradoAmarillo.jpg " Height="70" Width="70" Grid.Row="1"  />

            <TextBlock x:ConnectionId='21' x:Name="TextPaqueteNombre" Grid.Row="1" Foreground="Black" FontSize="30" Text="Sin Seleccionar" TextWrapping="Wrap"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock  Grid.Row="1" Foreground="Black" FontSize="30"  Text="Peso" TextWrapping="Wrap"  VerticalAlignment="Center" Margin="0,0,70,0"/>
                <Image x:ConnectionId='24' x:Name="ImgPesoPaquete" Source="Assets\\Samples\\Estrella1.jpg " Grid.Row="1" Height="50"  VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock  Grid.Row="1" Foreground="Black" FontSize="30" Text="Forma" TextWrapping="Wrap" Margin="0,0,50,0" VerticalAlignment="Center"/>
                <TextBlock x:ConnectionId='23' x:Name="TextPaqueteForma" Grid.Row="1" Foreground="Black" FontSize="30" Text="Sin Seleccionar" TextWrapping="Wrap" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock  Grid.Row="1" Foreground="Black" FontSize="30" Text="Color" TextWrapping="Wrap" Margin="0,0,100,0" VerticalAlignment="Center"/>
                <Image x:ConnectionId='22' x:Name="ImgFormaPaquete" Source=" " Grid.Row="1"  Height="50" VerticalAlignment="Center"  />
            </StackPanel>

        </StackPanel>



        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:ConnectionId='13' x:Name="TextInfoDron"  Width="399" Height="50" VerticalAlignment="Top" Grid.Row="1" Foreground="Black" FontSize="30" Text="Información del Dron" TextWrapping="Wrap" HorizontalAlignment="Left"  />
            <Image x:ConnectionId='14' x:Name="SelImaDron" Source="Assets\\Samples\\CuadradoAmarillo.jpg " Height="70" Width="70" Grid.Row="1"  />

            <TextBlock x:ConnectionId='15' x:Name="TextDronNombre" Grid.Row="1" Foreground="Black" FontSize="30" Text="Sin Seleccionar" TextWrapping="Wrap"  VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock  Grid.Row="1" Foreground="Black" FontSize="30"  Text="Peso" TextWrapping="Wrap"  VerticalAlignment="Center" Margin="0,0,95,0"/>
                <Image x:ConnectionId='18' x:Name="ImgPesoDron" Source="Assets\\Samples\\Estrella1.jpg " Grid.Row="1" Height="50"  VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock  Grid.Row="1" Foreground="Black" FontSize="30" Text="Batería" TextWrapping="Wrap" Margin="0,0,65,0" VerticalAlignment="Center"/>
                <Image x:ConnectionId='17' x:Name="ImgBateriaDron" Source="Assets\\Samples\\Estrella1.jpg " Height="50"  VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock  Grid.Row="1" Foreground="Black" FontSize="30" Text="Velocidad" TextWrapping="Wrap"  Margin="0,0,30,0 " VerticalAlignment="Center"/>
                <Image x:ConnectionId='16' x:Name="ImgFormaDron" Source="Assets\\Samples\\Estrella1.jpg " Grid.Row="1"  Height="50" VerticalAlignment="Center"  />
            </StackPanel>

        </StackPanel>
        
        <Button x:ConnectionId='12' x:Name="Controles" Content="VOLVER"  FontSize="40"                      Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="2" Height="68" Width="300"/>

    </Grid>
</Page>

