<Page
    x:Class="Grupo12ProyectoFinal.Pausa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grupo12ProyectoFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:ConnectionId='2' x:Name="ButtonStyle"
               TargetType="Button">
            <Setter Property="Width" Value="315"></Setter>
            <Setter Property="Height" Value="75"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="26"></Setter>
            <Setter Property = "CornerRadius" Value="50" ></Setter>
            <Setter Property="Background" Value="Gray"></Setter>
            <Setter Property = "Foreground" Value="Black" ></Setter>
            <Setter Property = "FontFamily" Value="Arial" ></Setter>
            <Setter Property = "FontWeight" Value="SemiBold"  ></Setter>
        </Style>
        <Style x:ConnectionId='3' x:Name="HeaderPanelTextStyle"
               TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="26"></Setter>
            <Setter Property = "Foreground" Value="Black" ></Setter>
            <Setter Property = "FontFamily" Value="Consolas" ></Setter>
            <Setter Property = "FontWeight" Value="Bold"  ></Setter>
        </Style>

        <Style x:ConnectionId='4' x:Name="BodyPanelTextStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property = "Foreground" Value="Black" ></Setter>
            <Setter Property = "FontFamily" Value="Consolas" ></Setter>
            <Setter Property = "FontWeight" Value="SemiBold"  ></Setter>
        </Style>

        <!--Los stackPannels grises no tendrán esta forma luego, serán solo para los datos, la forma vendrá dada por una imagen -->
        <Style x:ConnectionId='5' x:Name="PanelStyle"
               TargetType="StackPanel">
            <Setter Property="Background" Value="LightGray"></Setter>
            <Setter Property = "BorderThickness" Value="2" ></Setter>
            <Setter Property = "CornerRadius" Value="50" ></Setter>
        </Style>
        <Style x:ConnectionId='6' x:Name="InfoPanelStyle"
               TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"></Setter>
            <Setter Property="Padding" Value="20,10"></Setter>
            <Setter Property="Spacing" Value="5"></Setter>
        </Style>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.3*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>

        <StackPanel x:ConnectionId='7' x:Name="LeftPanel" Width="365" Height="705"  Style="{StaticResource PanelStyle}">
            <TextBlock Text="Características del Dron" Style="{StaticResource HeaderPanelTextStyle}" Margin="0,40,0,0"></TextBlock>
            <Image x:ConnectionId='23' x:Name="PanelDronImage" Source="Assets/StoreLogo.png" Width="150" Margin="0,50,0,10" />
            <StackPanel x:ConnectionId='24' x:Name="InnerPanelDronName" Width="250" Background="White" BorderBrush="DarkGray" BorderThickness="2" CornerRadius="10">
                <TextBlock Text="Nombre del Dron" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Center"></TextBlock>
            </StackPanel>

            <StackPanel x:ConnectionId='25' x:Name="LefttPanelInfo" Padding="0,50" Spacing="20">
                <StackPanel x:ConnectionId='26' x:Name="WeightStack" Style="{StaticResource InfoPanelStyle}">
                    <TextBlock Text="Peso:" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <Image x:ConnectionId='37' x:Name="WeightItem_0" Source="Assets/StoreLogo.png" Margin="50,0,0,0" ></Image>
                    <Image x:ConnectionId='38' x:Name="WeightItem_1" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='39' x:Name="WeightItem_2" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='40' x:Name="WeightItem_3" Source="Assets/StoreLogo.png" ></Image>
                </StackPanel>
                <StackPanel x:ConnectionId='27' x:Name="BatteryStack" Orientation="Horizontal"  Padding="20,10" Spacing="5">
                    <TextBlock Text="Batería:" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <Image x:ConnectionId='33' x:Name="BatteryItem_0" Source="Assets/StoreLogo.png" Margin="20,0,0,0" ></Image>
                    <Image x:ConnectionId='34' x:Name="BatteryItem_1" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='35' x:Name="BatteryItem_2" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='36' x:Name="BatteryItem_3" Source="Assets/StoreLogo.png" ></Image>

                </StackPanel>
                <StackPanel x:ConnectionId='28' x:Name="SpeedStack" Orientation="Horizontal" Padding="20,10" Spacing="5">
                    <TextBlock Text="Velocidad:" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <Image x:ConnectionId='29' x:Name="SpeedItem_0" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='30' x:Name="SpeedItem_1" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='31' x:Name="SpeedItem_2" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='32' x:Name="SpeedItem_3" Source="Assets/StoreLogo.png" ></Image>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel x:ConnectionId='8' x:Name="MediumPanel" Grid.Column="1"  Width="365" Height="555" Padding="0,110" Spacing="50" Style="{StaticResource PanelStyle}">
            <Button x:ConnectionId='20' x:Name="RenaudarButton"                         Content="RENAUDAR" Style="{StaticResource ButtonStyle}" />
            <Button x:ConnectionId='21' x:Name="OpcionesButton"                         Content="OPCIONES" Style="{StaticResource ButtonStyle}" />
            <Button x:ConnectionId='22' x:Name="VolverButton"                     Content="MENU PRINCIPAL" Style="{StaticResource ButtonStyle}" />
        </StackPanel>

        <TextBlock x:ConnectionId='9' x:Name="NavInfoText" Text="Estoy en Pausa"  Grid.Column="1" Foreground="White" FontSize="30" TextAlignment="Center" Margin="101,875,106,84" />

        <StackPanel x:ConnectionId='10' x:Name="RightPanel" Grid.Column="2"  Width="365" Height="705"  Style="{StaticResource PanelStyle}">
            <TextBlock Text="Partida actual" Style="{StaticResource HeaderPanelTextStyle}" Margin="0,40,0,0" ></TextBlock>
            <StackPanel x:ConnectionId='11' x:Name="RightPanelInfo" Padding="0,50" Spacing="15">
                <StackPanel x:ConnectionId='12' x:Name="TimeStack" Style="{StaticResource InfoPanelStyle}">
                    <TextBlock Text="Tiempo:" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <TextBlock Text="01:36" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="170,0,0,0"></TextBlock>
                </StackPanel>
                <StackPanel x:ConnectionId='13' x:Name="ObjectiveStack" Style="{StaticResource InfoPanelStyle}">
                    <TextBlock Text="Objetivos:" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <Image x:ConnectionId='16' x:Name="ObjectiveItem_0" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='17' x:Name="ObjectiveItem_1" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='18' x:Name="ObjectiveItem_2" Source="Assets/StoreLogo.png" ></Image>
                    <Image x:ConnectionId='19' x:Name="ObjectiveItem_3" Source="Assets/StoreLogo.png" ></Image>

                </StackPanel>
                <StackPanel x:ConnectionId='14' x:Name="PackageStack" Style="{StaticResource InfoPanelStyle}">
                    <TextBlock Text="Paquete:" Style="{StaticResource BodyPanelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" ></TextBlock>
                    <Image x:ConnectionId='15' x:Name="PackageItem" Width="50" Source="Assets/StoreLogo.png" HorizontalAlignment="Left" ></Image>
                </StackPanel>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>

