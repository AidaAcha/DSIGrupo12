<Page x:ConnectionId='1'
    x:Class="Grupo12ProyectoFinal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Grupo12ProyectoFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="ImageGridView_DefaultItemTemplate"
                                               >
            <Grid x:ConnectionId='5' Height="40" Width="300" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='6'                    FontSize="{Binding Value, ElementName=FontSlider}" VerticalAlignment="Center"/>
                <Image x:ConnectionId='7'                          Grid.Column="1" VerticalAlignment="Center" Width="{Binding Value, ElementName=ImageSlider}"/>
                <TextBlock x:ConnectionId='8'                        FontSize="{Binding Value, ElementName=FontSlider}" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>

        </DataTemplate>

        <Flyout x:Key="zoomFlyout">
            <StackPanel>
                <Slider x:ConnectionId='2' x:Name="ImageSlider"
                        Width="100"
                        Minimum="20"
                        Maximum="80"
                        Value="40"
                        Margin="0,5,0,0"
                        TickFrequency="1"
                        SnapsTo="Ticks"
                        Header="Tamaño Imagen" 
                        
                        />
                <Slider x:ConnectionId='3' x:Name="FontSlider"
                        Width="100"
                        Minimum="20"
                        Maximum="40"
                        Value="30"
                        Margin="0,5,0,0"
                        TickFrequency="1"
                        SnapsTo="Ticks"
                        Header="Tamaño Fuente" 
                        />
            </StackPanel>
        </Flyout>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <CommandBar Grid.ColumnSpan="2">
            <AppBarButton x:ConnectionId='18' Icon="SelectAll" Label="Todos"                         />
            <AppBarButton x:ConnectionId='19' Icon="ClearSelection" Label="Ninguno"                              />
            <AppBarButton Icon="Zoom" Label="Zoom" Flyout="{StaticResource zoomFlyout}"/>
            <CommandBar.Content>
                <TextBlock Text="Mapa de Madrid" Margin="20,0,0,0" FontSize="30"  VerticalAlignment="Center"/>
            </CommandBar.Content>
        </CommandBar>
        <ScrollViewer x:ConnectionId='9' x:Name="MainImageScroller"
                      Grid.Row="1"
                      ZoomMode="Enabled"
                      HorizontalScrollMode="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
            <Grid>
                <Image x:ConnectionId='16' x:Name="targetImage"
                       Grid.Row="1"
                       Source="Assets/Madrid.png"
                       Stretch="None"
                                                           
                                                       
                                                             />
                <Canvas x:ConnectionId='17' x:Name="MiCanvas"
                        Grid.Row="1"
                                                            
                                                        
                                                              
                        XYFocusKeyboardNavigation="Enabled"
                        XYFocusDownNavigationStrategy="RectilinearDistance"
                        XYFocusUpNavigationStrategy="RectilinearDistance"
                        XYFocusLeftNavigationStrategy="RectilinearDistance"
                        XYFocusRightNavigationStrategy="RectilinearDistance"
                        TabFocusNavigation="Once"
                        AllowFocusOnInteraction="True"
                                                  >
                </Canvas>
            </Grid>
        </ScrollViewer>
        
        <Image x:ConnectionId='10' x:Name="SelIma" Source=" " Stretch="Fill" Grid.Row="2" Grid.Column="1"/>

        <StackPanel Grid.Column="0" Grid.Row="2" Background="LightGray">
            <TextBlock x:ConnectionId='12' x:Name="SelDatos" Text="Ninguna selección"/>
            <TextBlock x:ConnectionId='13' x:Name="SelExp" Text="" TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='14' x:Name="TimerLog" Text="" />
            <TextBlock x:ConnectionId='15' x:Name="GamePadLog" Text="" />
        </StackPanel>
        <ListView x:ConnectionId='11' x:Name="itemListView" 
                  Grid.Row="1" Grid.Column="1" 
                  Background="LightGray"
                                                     
                  ItemTemplate="{StaticResource ImageGridView_DefaultItemTemplate}" 
                  IsItemClickEnabled="True"
                  SelectionMode="Multiple"
                  IsFocusEngagementEnabled="True"
                  VerticalAlignment="Stretch"
                                                     
                                                                  >
        </ListView>
        
    </Grid>
</Page>

